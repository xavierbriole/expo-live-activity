{
  "name": "@xavierbriole/expo-live-activity",
  "version": "0.2.1",
  "description": "A module for adding Live Activity to a React Native app for iOS.",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "clean:plugin": "rm -rf plugin/build plugin/tsconfig.tsbuildinfo",
    "format:check": "prettier --check .",
    "lint": "expo-module eslint",
    "lint:libOnly": "expo-module eslint --ignore-pattern 'example/*'",
    "test": "expo-module test",
    "prepare": "expo-module prepare && rm .eslintrc.js",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "open:ios": "xed example/ios",
    "typecheck": "tsc",
    "generateTests": "node ./example/tests/scripts/generateFlows.js",
    "runAllTests": "./example/tests/scripts/runAllTests.sh",
    "generateTestReport": "node ./example/tests/scripts/generateReport.js"
  },
  "keywords": [
    "react-native",
    "expo",
    "live-activity",
    "ios",
    "apple"
  ],
  "author": "Kamil Owczarz <kamil.owczarz@swmansion.com> (https://github.com/kowczarz)",
  "contributors": [
    "Anna Olak <anna.olak@swmansion.com> (https://github.com/anna1901)",
    "Artur Bilski <artur.bilski@swmansion.com> (https://github.com/arthwood)"
  ],
  "repository": "https://github.com/xavierbriole/expo-live-activity",
  "bugs": {
    "url": "https://github.com/xavierbriole/expo-live-activity/issues"
  },
  "license": "MIT",
  "homepage": "https://github.com/xavierbriole/expo-live-activity#readme",
  "devDependencies": {
    "@types/react": "~19.1.0",
    "eslint": "^9.33.0",
    "eslint-config-expo": "^9.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "expo": "~54.0.0",
    "expo-module-scripts": "^5.0.3",
    "prettier": "^3.6.2",
    "react-native": "0.81.4",
    "pdf-lib": "^1.17.1"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  }
}
